<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.navigator.repository.PointRepository">

    <insert id="savePoints" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO point (x, y) VALUES
        <foreach collection="list" item="p" separator=",">
            (#{p.x}, #{p.y})
        </foreach>
    </insert>

    <resultMap id="PointResultMap" type="com.solvd.navigator.domain.Point">
        <id     property="id" column="id"/>
        <result property="x"  column="x"/>
        <result property="y"  column="y"/>
    </resultMap>

    <select id="findAll" resultMap="PointResultMap">
        SELECT id, x, y
        FROM point
        ORDER BY id;
    </select>

</mapper>
